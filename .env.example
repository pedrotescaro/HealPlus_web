# HealPlus Environment Configuration
# Copie este arquivo para .env.local (frontend) ou .env (backend) e configure as variáveis

# ==================== BACKEND ====================

# Database MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=heal_plus_db
MONGO_USER=admin
MONGO_PASSWORD=admin

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# AI Providers - Escolha qual usar ou configure múltiplas

# Google Gemini (Padrão)
GOOGLE_GENAI_KEY=your_google_gemini_api_key

# OpenAI GPT-4 Vision
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key

# Emergent LLM Integration
EMERGENT_LLM_KEY=your_emergent_integrations_key

# Google OAuth Credentials
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# LLaMA Self-Hosted (opcional)
LLAMA_ENDPOINT=http://localhost:8001
LLAMA_API_KEY=your_llama_api_key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# ==================== FRONTEND ====================

# Backend API URL
REACT_APP_BACKEND_URL=http://localhost:8000

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SENTRY=false

# ==================== PRODUCTION ====================

# (Quando deploying em produção, configure estes)

# Database
# MONGO_URL=mongodb+srv://user:password@cluster.mongodb.net/

# Domain
# DOMAIN=healplus.com
# BACKEND_URL=https://api.healplus.com
# FRONTEND_URL=https://healplus.com

# SSL/TLS
# SSL_CERT_PATH=/etc/letsencrypt/live/healplus.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/healplus.com/privkey.pem
