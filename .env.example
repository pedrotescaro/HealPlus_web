# HealPlus Environment Configuration
# Copie este arquivo para .env.local (frontend) ou .env (backend) e configure as variáveis

# ==================== BACKEND ====================

# Server Configuration
SERVER_PORT=8080

# Database PostgreSQL/H2
SPRING_DATASOURCE_URL=jdbc:h2:mem:heal_plus_db;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# Database MongoDB
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/heal_plus_db

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION_HOURS=168

# Machine Learning Configuration (DeepLearning4J)
ML_MODEL_PATH=models/wound-classifier.zip
ML_ENABLED=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Google OAuth Credentials (opcional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# ==================== FRONTEND ====================

# Backend API URL
REACT_APP_BACKEND_URL=http://localhost:8080

# Environment
REACT_APP_ENV=development

# Demo Mode (para testes sem backend)
REACT_APP_DEMO_MODE=false

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SENTRY=false

# ==================== PRODUCTION ====================

# (Quando deploying em produção, configure estes)

# Database
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/heal_plus_db
# SPRING_DATA_MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/

# Domain
# DOMAIN=healplus.com
# BACKEND_URL=https://api.healplus.com
# FRONTEND_URL=https://healplus.com

# SSL/TLS
# SSL_CERT_PATH=/etc/letsencrypt/live/healplus.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/healplus.com/privkey.pem
